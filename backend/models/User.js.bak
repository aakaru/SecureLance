import mongoose from 'mongoose';

const userSchema = new mongoose.Schema({
  username: {
    type: String,
    required: true,
    unique: true,
    trim: true,
    minlength: 3
  },
  walletAddress: {
    type: String,
    required: true,
    unique: true,
    trim: true,
    
    
  },
  nonce: {
    type: String, 
    required: true,
    default: () => Math.floor(Math.random() * 1000000).toString()
  },
  photoUrl: {
    type: String,
    default: '' 
  },
  aboutMe: {
    type: String,
    default: ''
  },
  skills: {
    type: [String], 
    default: []
  },
  portfolio: {
    type: [{ 
      title: { type: String, required: true },
      description: { type: String },
      url: { type: String }
    }],
    default: []
  },
}, {
  timestamps: true 
});

const User = mongoose.model('User', userSchema);

export default User; 